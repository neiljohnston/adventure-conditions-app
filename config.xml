<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.adventureconditions" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>adventureconditions</name>
    <description>
        Brand new cordova project!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="/res/icon/android/hdpi.png" />
        <icon density="ldpi" src="/res/icon/android/ldpi.png" />
        <icon density="mdpi" src="/res/icon/android/mdpi.png" />
        <icon density="xhdpi" src="/res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="/res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="/res/icon/android/xxxhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="browser">
        <preference name="ShowSplashScreen" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="*" />
    <access origin="*://*.tile.openstreetmap.org" />
    <access origin="https://*.tile.openstreetmap.org" />
    <access origin="*://plume-api.now.sh" />
    <access origin="*://*.cr.usgs.gov" />
    <access origin="*://*.arcgis.com" />
    <access origin="*://maps.alberta.ca" />
    <access origin="*://*.ospo.noaa.gov" />
    <access origin="*://ospo.noaa.gov" />
    <access origin="*://*.noaa.gov" />
    <access origin="*://*.waqi.info" />
    <access origin="*://*.state.or.us" />
    <access origin="*://tripcheck.com" />
    <access origin="*://*.dot.ca.gov" />
    <access origin="*://*.lbl.gov" />
    <access origin="*://*.strava.com" />
    <access origin="*://cwfis.cfs.nrcan.gc.ca" />
    <access origin="*://gis.fema.gov" />
    <access origin="*://idpgis.ncep.noaa.gov" />
    <access origin="*://geo.weather.gc.ca" />
    <access origin="*://*.traffic.maps.api.here.com" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.1.2" />
</widget>
